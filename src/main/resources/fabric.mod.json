  "name": "DiscordMinecraftLinker",
  "description": "This mod makes a chat link between Minecraft and Discord.",
  "authors": [
    "ElMaxon"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/discordmc-lnk/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.mwon.discordminecraftlinker.DiscordMinecraftLinker"
    ]
  },
  "mixins": [
    "discordmc-lnk.mixins.json"
